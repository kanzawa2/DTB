/* javascript for stop_watch */
<%
  if Bookmark.current == nil
    duration = 0
  else
    duration = (Time.now - Bookmark.current.created_at).to_i
  end
%>

var stopWatch = function(){
    $('#time_edition input:radio#stop').click();
};
var startWatch = function(){
    $('#time_edition input:radio#start').click();
};
$('#time_edition input.start').live("click", startWatch);
$('#time_edition input.stop').live("click", stopWatch);
