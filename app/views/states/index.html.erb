<h1>Listing states</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Default</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.position %></td>
        <td><%= colored_state(state) %></td>
        <td>
          <% icon = state.default ? '<i class="fa fa-star"></i>'.html_safe : '<i class="fa fa-star-o"></i>'.html_safe %>
          <%= link_to icon,
              :id         => state.id,
              :controller => "states",
              :action     => "update_default",
              :method     => :put %>
        </td>
        <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe,
                edit_state_path(state) %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe,
                state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

