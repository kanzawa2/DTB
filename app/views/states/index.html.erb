<h1>Listing states</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Default</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.position %></td>
        <td><%= colored_state(state) %></td>
        <td>
          <% icon = state.default ? (fa_icon "star") : (fa_icon "star-o") %>
          <%= link_to icon, update_default_state_path(state), method: :put %>
        </td>
        <td><%= link_to (fa_icon "pencil"),
                edit_state_path(state) %></td>
        <td><%= link_to (fa_icon "trash-o"),
                state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

