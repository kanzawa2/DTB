<%# -*- coding:utf-8 -*- %>
<div id="entry_form">
  <%= error_messages_for "work" %>
  <%= form_for(work, :url => {:controller => "works", :action => "create"}) do |f| %>
  <div id="left_area">
    <div id="name_field"><%= f.label "name", "名前" %><br>
      <%= f.text_field "name", :size => 30, :placeholder => "仕事の名前を入力してください" %></div>
    <div id="deadline_field"><%= f.label "deadline", "締切" %><br>
      <%= f.text_field "deadline", :size => 30, :placeholder => "締切を入力してください" %></div>
  </div>
  <div id="center_area">
    <div id="desc_field"><%# f.label "description", "詳細：" %>
      <%= f.text_area "description", :cols => 39, :rows => 4, :placeholder => "仕事の詳細を入力してください" %></div>
  </div>
  <div id="right_area">
    <%= submit_tag "登録", :confirm => "この内容で仕事を登録しますか?" %>
  </div>
  <% end %>
</div>
