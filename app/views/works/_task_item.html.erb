<%# -*- coding: utf-8 -*- %>
<tr class="work_item">
  <% work.name == nil ? name = "名称未設定" : name = work.name %>
  <td class="title">
    <%= link_to name, :controller => "works", :action => "show", :id => work %>
  </td>
  <td class="duration"><nobr>
      (<%= work.created_at.strftime("%Y/%m/%d %H:%M") %> 〜 <%= task.last_update != nil ? task.last_update.strftime("%Y/%m/%d %H:%M") : "" %>)
  </nobr></td>
  <td class="operations">
    <%= link_to image_tag("edit.gif", :title => "仕事情報編集"), :controller => "works", :action => "edit", :id => work %>
    <%= link_to image_destroy('仕事削除'),  {:controller => "works", :action => "destroy", :task_id => work},
    :confirm => '本当に削除してよろしいですか?', :method => :get %>
  </td>
</tr>
