<%# -*- coding: utf-8 -*-  %>
<%= stylesheet_link_tag "works" %>
<h2>仕事一覧</h2>

<table id="work_table">
  <col class="tree">
  <col class="deadline">
  <col class="edit">
  <col class="delete">
  <% index = 0 %>
  <% works.each do |work| %>
    <%= render :partial => "works/table_item", :locals => {:work => work, :depth => 0} %>
  <% end %>
</table>

<%= will_paginate works, :previous_label => "<", :next_label => ">" %>
