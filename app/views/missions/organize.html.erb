<h1>Organize missions</h1>
<div class="row">
  <div class="col-lg-3">
    <table class="missions table table-hover table-bordered table-condensed table-treegrid">
      <thead>
        <tr>
          <th>Missions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="droppable-mission-for-mission selected" id="nil">Inbox</td>
        </tr>
        <tr>
          <td class="droppable-mission-for-mission" id="0">Root missions</td>
        </tr>
        <% @root_missions.each do |mission| %>
          <%= render :partial => "missions/tree_grid_item_in_organize",
              :locals => {:mission => mission, :unfold_task => false, :at => :mission} %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-lg-6">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Deadline</th>
        </tr>
      </thead>
      <tbody class="mission-inbox">
        <% @missions.each do |mission| %>
          <%= render :partial => "missions/inbox_item", :locals => {:mission => mission} %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
