<h1>Organize missions</h1>
<div class="row">
  <div class="col-lg-2">
    <table class="missions table table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>Missions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="droppable-mission-for-mission selected" id="nil">Inbox</td>
        </tr>
        <% @missions.each do |mission| %>
        <tr>
          <td class="droppable-mission-for-mission" id="<%= mission.id %>"><%= mission.name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-lg-7">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Deadline</th>
        </tr>
      </thead>
      <tbody class="mission-inbox">
        <% @missions.each do |mission| %>
          <%= render :partial => "missions/inbox_item", :locals => {:mission => mission} %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
