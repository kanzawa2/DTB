<% if time_entry == TimeEntry.current %>
  <%= link_to (fa_icon 'stop'), stop_time_entries_path, method: :post %>
<% else %>
  <%= link_to (fa_icon 'play'),
              continue_time_entry_path(time_entry,
                                       name: time_entry.name,
                                 task_id: time_entry.task_id),
              method: :post %>
<% end %>
