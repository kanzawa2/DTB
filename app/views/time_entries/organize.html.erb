<h1>Organize time entries</h1>
<div class="row">
  <div class="col-lg-3">
    <table class="tasks table table-hover table-bordered table-condensed table-treegrid">
      <thead>
        <tr>
          <th>Tasks</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="droppable-task-for-time-entry selected" id="nil">Inbox</td>
        </tr>
        <% Task.where(mission: nil).each do |t| %>
          <tr>
            <td class="droppable-task-for-time-entry" id="<%= t.id %>">
              <span class="task"><%= t.name %></span>
            </td>
          </tr>
        <% end %>
        <% @root_missions.each do |mission| %>
          <%= render :partial => "missions/tree_grid_item_in_organize",
              :locals => {:mission => mission, :unfold_task => true, :at => :time_entry} %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-lg-6">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Duration</th>
        </tr>
      </thead>
      <tbody class="time-entry-inbox">
        <% @time_entries.each do |time_entry| %>
          <%= render :partial => "time_entries/inbox_item", :locals => {:time_entry => time_entry} %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
