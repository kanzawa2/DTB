<h1>Organize time entries</h1>
<div class="row">
  <div class="col-sm-4">
    <table class="tasks table table-hover table-bordered table-condensed table-treegrid">
      <thead>
        <tr>
          <th>Tasks</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="droppable-task-for-time-entry selected">Inbox</td>
        </tr>
        <% Task.where(mission: nil).each do |t| %>
          <tr>
            <td class="droppable-task-for-time-entry" id="<%= t.id %>">
              <span class="task"><%= t.name %></span>
            </td>
          </tr>
        <% end %>
        <%= render partial: 'missions/tree_grid_item_in_organize',
                   collection: @root_missions,
                   as: :mission,
                   locals: { unfold_task: false, at: :task } %>
      </tbody>
    </table>
  </div>
  <div class="col-sm-8">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Duration</th>
        </tr>
      </thead>
      <tbody class="time-entry-inbox">
        <%= render partial: 'time_entries/inbox_item',
                   collection: @time_entries,
                   as: :time_entry %>
      </tbody>
    </table>
  </div>
</div>
