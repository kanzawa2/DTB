<h1>Organize time entries</h1>
<div class="row">
  <div class="col-lg-2">
    <table class="tasks table table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>Tasks</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="droppable-task-for-task selected" id="nil">Inbox</td>
        </tr>
        <% @tasks.each do |task| %>
        <tr>
          <td class="droppable-task-for-task" id="<%= task.id %>"><%= task.name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-lg-7">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Duration</th>
        </tr>
      </thead>
      <tbody class="time-entry-inbox">
        <% @time_entries.each do |time_entry| %>
          <%= render :partial => "time_entries/inbox_item", :locals => {:time_entry => time_entry} %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
