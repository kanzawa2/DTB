<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @time_entry.name %>
</p>

<p>
  <strong>Keyword:</strong>
  <%= @time_entry.keyword %>
</p>

<p>
  <strong>Comment:</strong>
  <%= @time_entry.comment %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @time_entry.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @time_entry.end_time %>
</p>

<p>
  <strong>Task:</strong>
  <%= @time_entry.task_id %>
</p>

<p>
  <strong>Unified Histories:</strong>
  <table class="table table-striped">
    <tr>
      <th>Path</th>
      <th>Title</th>
      <th>Type</th>
      <th>Duration</th>
      <th>Start time</th>
      <th>End time</th>
    </tr>
  <% @time_entry.unified_histories.each do |uh| %>
    <tr>
      <td><%= uh.path %></td>
      <td><%= uh.title %></td>
      <td><%= uh.history_type %></td>
      <td><%= uh.end_time - uh.start_time %></td>
      <td><%= uh.start_time %></td>
      <td><%= uh.end_time %></td>
    </tr>
  <% end %>
  </table>
</p>


<%= link_to 'Edit', edit_time_entry_path(@time_entry) %> |
<%= link_to 'Back', time_entries_path %>
