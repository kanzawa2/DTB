<h1>
  <span class="time-entry"><%= @time_entry.name %></span>
  <%= render partial: 'time_entries/start_or_stop_button',
             locals: { time_entry: @time_entry } %>
</h1>

<p>
  <strong>Keywords:</strong>
  <%= @time_entry.keyword %>
</p>

<p>
  <strong>Comment:</strong>
  <%= @time_entry.comment %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @time_entry.duration %>
</p>

<ul class="nav nav-tabs" role="tablist">
  <li class="active">
    <a data-toggle="tab" href="#file-histories">File histories</a>
  </li>
  <li>
    <a data-toggle="tab" href="#web-histories">Web histories</a>
  </li>
</ul>

<div class="field">
  <div class="tab-content">
    <div class="tab-pane active" id="file-histories">
      <%= render partial: "unified_histories/file_history_item",
                 collection: @time_entry.file_histories,
                 as: :file_history %>
    </div>

    <div class="tab-pane" id="web-histories">
      <%= render partial: "unified_histories/web_history_item",
                 collection: @time_entry.web_histories,
                 as: :web_history %>
      <div class="float-clear"></div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_time_entry_path(@time_entry) %> |
<%= link_to 'Back', time_entries_path %>
