<h1>Organize tasks</h1>
<div class="row">
  <div class="col-lg-3">
    <table class="missions table table-hover table-bordered table-condensed table-treegrid">
      <thead>
        <tr>
          <th>Missions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="droppable-mission-for-task selected" id="nil">Inbox</td>
        </tr>
        <% @root_missions.each do |mission| %>
          <%= render :partial => "missions/tree_grid_item_in_organize",
              :locals => {:mission => mission, :unfold_task => false, :at => :task} %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-lg-6">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Deadline</th>
        </tr>
      </thead>
      <tbody class="task-inbox">
        <% @tasks.each do |task| %>
          <%= render :partial => "tasks/inbox_item", :locals => {:task => task} %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
