<h1>Organize tasks</h1>
<div class="row">
  <div class="col-sm-4">
    <table class="missions table table-hover table-bordered table-condensed table-treegrid">
      <thead>
        <tr>
          <th>Missions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="droppable-mission-for-task selected">Inbox</td>
        </tr>
        <%= render partial: 'missions/tree_grid_item_in_organize',
                   collection: @root_missions,
                   as: :mission,
                   locals: { unfold_task: false, at: :task } %>
      </tbody>
    </table>
  </div>
  <div class="col-sm-8">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Duration</th>
        </tr>
      </thead>
      <tbody class="task-inbox">
        <%= render partial: 'tasks/inbox_item', collection: @tasks, as: :task %>
      </tbody>
    </table>
  </div>
</div>
