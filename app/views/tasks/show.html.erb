<p id="notice"><%= notice %></p>

<h1>
  <%= @task.name %>
  <%= link_to '<i class="icon-play"></i>'.html_safe,
      :id         => @task.id,
      :controller => "tasks",
      :action     => "continue" %>
</h1>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @task.deadline %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status %>
</p>

<p>
  <strong>Keyword:</strong>
  <%= @task.keyword %>
</p>

<p>
  <strong>Mission:</strong>
  <%= link_to @task.mission.name, @task.mission %>
</p>

<h2>File Histories</h2>
<% @task.file_histories.each do |file_history| %>
  <%= render :partial => "unified_histories/file_history_item",
      :locals => {:file_history => file_history} %><br>
<% end %>

<h2>Web Histories</h2>
<% @task.web_histories.each do |web_history| %>
  <%= render :partial => "unified_histories/web_history_item",
      :locals => {:web_history => web_history} %><br>
<% end %>


<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
